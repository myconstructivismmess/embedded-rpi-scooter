# Import the static library from the lib subdirectory and the environment
Import('scootercontrol_lib', 'env')

# Create an environment
audio_scooter_control_daemon_program_env = env.Clone()

# Add SFML audio part to the environment
audio_scooter_control_daemon_program_env.Append(LIBS=['sfml-audio-s', 'sfml-system-s'])

# Auto-detect all .cpp files in visualscootercontrold and its subdirectories
audio_scooter_control_daemon_program_sources = audio_scooter_control_daemon_program_env.Glob('**.cpp')

# Build the executable and link with the static library
audio_scooter_control_daemon_program = audio_scooter_control_daemon_program_env.Program('audioscootercontrold', audio_scooter_control_daemon_program_sources + [scootercontrol_lib])

# Install the executable to the output directory (optional)
Default(audio_scooter_control_daemon_program)